        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_login</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/main_color_background</item>
        <item name="android:colorBackground">@color/main_color_background</item>

        <item name="android:textColorHint">@color/main_text_hint_color</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="fontFamily">@font/gothic</item>
