<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSuccess"
        android:layout_width="match_parent"
        android:layout_height="@dimen/feedback_height"
        android:layout_gravity="top"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/offset_16"
                android:layout_marginTop="@dimen/offset_16"
                android:layout_marginRight="@dimen/offset_16"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/star1"
                android:layout_width="@dimen/feedback_star"
                android:layout_height="@dimen/feedback_star"
                android:layout_marginStart="@dimen/offset_16"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_star_border"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="@dimen/feedback_star"
                android:layout_height="@dimen/feedback_star"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_star_border"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@id/star1"
                app:layout_constraintRight_toLeftOf="@id/star3"
                app:layout_constraintTop_toBottomOf="@id/label" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="@dimen/feedback_star"
                android:layout_height="@dimen/feedback_star"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_star_border"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@id/star2"
                app:layout_constraintRight_toLeftOf="@id/star4"
                app:layout_constraintTop_toBottomOf="@id/label" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="@dimen/feedback_star"
                android:layout_height="@dimen/feedback_star"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_star_border"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@id/star3"
                app:layout_constraintRight_toLeftOf="@id/star5"
                app:layout_constraintTop_toBottomOf="@id/label" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="@dimen/feedback_star"
                android:layout_height="@dimen/feedback_star"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_star_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintLeft_toRightOf="@id/star4"
                app:layout_constraintTop_toBottomOf="@id/label" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</merge>